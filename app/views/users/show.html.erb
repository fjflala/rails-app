<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
 <div class="col-md-4 col-md-offset-4 center">
  <%= gravatar_for @user, size: 50%>
 </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>
    <% @user.articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><small>Created by: <%= article.user.username if article.user %>,
<%= time_ago_in_words(article.created_at) %> ago,
last updated: <%= time_ago_in_words(article.updated_at) %> ago</small></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
</table>